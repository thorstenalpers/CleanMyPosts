<Page
    x:Class="XTweetCleaner.UI.Views.MainPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:XTweetCleaner.UI.Properties"
	xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
	xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

	<Grid>

		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="1" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Border Grid.Row="0" Margin="4" BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Padding="3">
			<Grid VerticalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="10,0,10,0" FontSize="15"><Run Text="1"/><Run Language="en-de" Text="."/><Run Text=" Login"/><Run Language="en-de" Text="  "/><Run Text=" 2"/><Run Language="en-de" Text="."/><Run Text=" Delete all posts"/></TextBlock>
				<Button Grid.Column="1" Content="Delete" Command="{Binding DeleteAllPostsCommand}" Margin="0,0,10,0" FontSize="12"/>
			</Grid>
		</Border>

		<Grid Grid.Row="2" ClipToBounds="True">
			<wv2:WebView2
				Source="{Binding Source}"
				x:Name="webView"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch" />
		</Grid>
	</Grid>
</Page>
