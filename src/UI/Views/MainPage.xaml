<Page
	x:Class="XTweetCleaner.UI.Views.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
	xmlns:viewmodels="clr-namespace:XTweetCleaner.UI.ViewModels"
	xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
	Style="{DynamicResource MahApps.Styles.Page}">
	<Page.Resources>
		<Style TargetType="ScrollBar">
			<Style.Triggers>
				<Trigger Property="Orientation" Value="Horizontal">
					<Setter Property="Height" Value="8" />
					<Setter Property="MinHeight" Value="8" />
					<Setter Property="Margin" Value="0" />
				</Trigger>
			</Style.Triggers>
		</Style>
	</Page.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<!--  Navigation Bar with Background  -->
		<Border
			Grid.Row="0"
			Margin="4"
			Padding="8"
			Background="#FFF5F5F5"
			BorderBrush="LightGray"
			BorderThickness="1"
			CornerRadius="3">
			<!--  ScrollViewer wraps the horizontal StackPanel  -->
			<ScrollViewer
				Focusable="False"
				HorizontalScrollBarVisibility="Auto"
				VerticalScrollBarVisibility="Disabled">
				<StackPanel
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Orientation="Horizontal">

					<!--  Posts Section  -->
					<StackPanel
						MinHeight="38"
						Margin="0,0,30,0"
						VerticalAlignment="Center"
						Orientation="Horizontal">
						<TextBlock
							Margin="0,0,10,0"
							VerticalAlignment="Center"
							FontSize="14"
							FontWeight="Bold"
							Text="Posts:" />
						<UniformGrid
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							Columns="2"
							Rows="1">
							<Button
								MinWidth="80"
								Margin="0,0,10,0"
								Padding="6,3"
								Command="{Binding ShowAllPostsCommand}"
								IsEnabled="{Binding AreButtonsEnabled}"
								ToolTip="Show All Posts">
								<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
									<iconPacks:PackIconMaterial
										Width="16"
										Height="16"
										VerticalAlignment="Center"
										Kind="Eye" />
									<TextBlock
										Margin="6,0,0,0"
										VerticalAlignment="Center"
										FontSize="12"
										Text="Show" />
								</StackPanel>
							</Button>
							<Button
								MinWidth="80"
								Padding="6,3"
								Command="{Binding DeleteAllPostsCommand}"
								IsEnabled="{Binding AreButtonsEnabled}"
								ToolTip="Delete All Posts">
								<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
									<iconPacks:PackIconMaterial
										Width="16"
										Height="16"
										VerticalAlignment="Center"
										Kind="Delete" />
									<TextBlock
										Margin="6,0,0,0"
										VerticalAlignment="Center"
										FontSize="12"
										Text="Delete" />
								</StackPanel>
							</Button>
						</UniformGrid>
					</StackPanel>

					<!--  Starred Section  -->
					<StackPanel
						MinHeight="38"
						Margin="0,0,30,0"
						VerticalAlignment="Center"
						Orientation="Horizontal">
						<TextBlock
							Margin="0,0,10,0"
							VerticalAlignment="Center"
							FontSize="14"
							FontWeight="Bold"
							Text="Starred:" />
						<UniformGrid
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							Columns="2"
							Rows="1">
							<Button
								MinWidth="80"
								Margin="0,0,10,0"
								Padding="6,3"
								Command="{Binding ShowStarredPostsCommand}"
								IsEnabled="{Binding AreButtonsEnabled}"
								ToolTip="Show Starred Posts">
								<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
									<iconPacks:PackIconMaterial
										Width="16"
										Height="16"
										VerticalAlignment="Center"
										Kind="Eye" />
									<TextBlock
										Margin="6,0,0,0"
										VerticalAlignment="Center"
										FontSize="12"
										Text="Show" />
								</StackPanel>
							</Button>
							<Button
								MinWidth="80"
								Padding="6,3"
								Command="{Binding DeleteStarredPostsCommand}"
								IsEnabled="{Binding AreButtonsEnabled}"
								ToolTip="Delete Starred Posts">
								<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
									<iconPacks:PackIconMaterial
										Width="16"
										Height="16"
										VerticalAlignment="Center"
										Kind="Delete" />
									<TextBlock
										Margin="6,0,0,0"
										VerticalAlignment="Center"
										FontSize="12"
										Text="Delete" />
								</StackPanel>
							</Button>
						</UniformGrid>
					</StackPanel>

					<!--  Followed Section  -->
					<StackPanel
						MinHeight="38"
						VerticalAlignment="Center"
						Orientation="Horizontal">
						<TextBlock
							Margin="0,0,10,0"
							VerticalAlignment="Center"
							FontSize="14"
							FontWeight="Bold"
							Text="Followed:" />
						<UniformGrid
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							Columns="2"
							Rows="1">
							<Button
								MinWidth="80"
								Margin="0,0,10,0"
								Padding="6,3"
								Command="{Binding ShowFollowedCommand}"
								IsEnabled="{Binding AreButtonsEnabled}"
								ToolTip="Show Followed">
								<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
									<iconPacks:PackIconMaterial
										Width="16"
										Height="16"
										VerticalAlignment="Center"
										Kind="Eye" />
									<TextBlock
										Margin="6,0,0,0"
										VerticalAlignment="Center"
										FontSize="12"
										Text="Show" />
								</StackPanel>
							</Button>
							<Button
								MinWidth="80"
								Padding="6,3"
								Command="{Binding DeleteFollowedCommand}"
								IsEnabled="{Binding AreButtonsEnabled}"
								ToolTip="Delete Followed">
								<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
									<iconPacks:PackIconMaterial
										Width="16"
										Height="16"
										VerticalAlignment="Center"
										Kind="Delete" />
									<TextBlock
										Margin="6,0,0,0"
										VerticalAlignment="Center"
										FontSize="12"
										Text="Delete" />
								</StackPanel>
							</Button>
						</UniformGrid>
					</StackPanel>

				</StackPanel>
			</ScrollViewer>
		</Border>

		<!--  WebView2 fills the rest  -->
		<Grid Grid.Row="1" ClipToBounds="True">
			<wv2:WebView2
				x:Name="webView"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch" />
		</Grid>
	</Grid>
</Page>
