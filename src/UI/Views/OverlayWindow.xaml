<Window x:Class="CleanMyPosts.UI.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#80000000"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
		WindowStartupLocation="CenterOwner"
        Width="400"
        Height="200"
        IsHitTestVisible="True"  

	MouseDown="Window_MouseDown">
	<!-- add this event -->
	<Border Background="White" CornerRadius="10" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="Bitte warten…" FontSize="20" Foreground="Black" HorizontalAlignment="Center"/>
			<ProgressBar IsIndeterminate="True" Margin="0,20,0,0" Width="200"/>
		</StackPanel>
	</Border>
</Window>
