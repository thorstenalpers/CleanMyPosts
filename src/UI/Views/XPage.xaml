<Page
    x:Class="CleanMyPosts.UI.Views.XPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mui="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:viewmodels="clr-namespace:CleanMyPosts.UI.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Style="{DynamicResource MahApps.Styles.Page}">

    <Page.Resources>
        <Style TargetType="ScrollBar">
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="8" />
                    <Setter Property="MinHeight" Value="8" />
                    <Setter Property="Margin" Value="0" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Navigation Bar mit Background  -->
        <Border
            Grid.Row="0"
            Margin="4"
            Padding="4"
            Background="{DynamicResource MahApps.Brushes.Control.Background}"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="3">



            <Grid>

                <ScrollViewer
                    Focusable="False"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled">

                    <StackPanel
                        Margin="4"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">

                        <!--  POSTS GROUP  -->
                        <Border
                            Margin="0,0,10,0"
                            Padding="8"
                            BorderBrush="{DynamicResource MahApps.Brushes.Gray9}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,6"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="Posts" />
                                <UniformGrid Columns="2" Rows="1">
                                    <Button
                                        MinWidth="80"
                                        Margin="0,0,10,6"
                                        Padding="6,3"
                                        Command="{Binding ShowPostsCommand}"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        ToolTip="View Posts">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="FormatListBulleted" />
                                            <TextBlock
                                                Margin="6,0,0,0"
                                                FontSize="12"
                                                Text="Show" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        MinWidth="80"
                                        Margin="0,0,10,6"
                                        Padding="6,3"
                                        Command="{Binding DeletePostsCommand}"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        ToolTip="Delete Posts">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="Delete" />
                                            <TextBlock
                                                Margin="6,0,0,0"
                                                FontSize="12"
                                                Text="Delete" />
                                        </StackPanel>
                                    </Button>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <!--  REPLIES GROUP  -->
                        <Border
                            Margin="0,0,10,0"
                            Padding="8"
                            BorderBrush="{DynamicResource MahApps.Brushes.Gray9}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,6"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="Replies" />
                                <UniformGrid Columns="2" Rows="1">
                                    <Button
                                        MinWidth="80"
                                        Margin="0,0,10,6"
                                        Padding="6,3"
                                        Command="{Binding ShowRepliesCommand}"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        ToolTip="View Replies">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="FormatListBulleted" />
                                            <TextBlock
                                                Margin="6,0,0,0"
                                                FontSize="12"
                                                Text="Show" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        MinWidth="80"
                                        Margin="0,0,10,6"
                                        Padding="6,3"
                                        Command="{Binding DeleteRepliesCommand}"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        ToolTip="Delete Replies">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="Delete" />
                                            <TextBlock
                                                Margin="6,0,0,0"
                                                FontSize="12"
                                                Text="Delete" />
                                        </StackPanel>
                                    </Button>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <!--  REPOSTS GROUP  -->
                        <Border
                            Margin="0,0,10,0"
                            Padding="8"
                            BorderBrush="{DynamicResource MahApps.Brushes.Gray9}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,6"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="Reposts" />
                                <UniformGrid Columns="2" Rows="1">
                                    <Button
                                        MinWidth="80"
                                        Margin="0,0,10,6"
                                        Padding="6,3"
                                        Command="{Binding ShowRepostsCommand}"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        ToolTip="View Reposts">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="FormatListBulleted" />
                                            <TextBlock
                                                Margin="6,0,0,0"
                                                FontSize="12"
                                                Text="Show" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        MinWidth="80"
                                        Margin="0,0,10,6"
                                        Padding="6,3"
                                        Command="{Binding DeleteRepostsCommand}"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        ToolTip="Delete Reposts">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="Delete" />
                                            <TextBlock
                                                Margin="6,0,0,0"
                                                FontSize="12"
                                                Text="Delete" />
                                        </StackPanel>
                                    </Button>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <!--  LIKES GROUP  -->
                        <Border
                            Margin="0,0,10,0"
                            Padding="8"
                            BorderBrush="{DynamicResource MahApps.Brushes.Gray9}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,6"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="Likes" />
                                <UniformGrid Columns="2" Rows="1">
                                    <Button
                                        MinWidth="80"
                                        Margin="0,0,10,6"
                                        Padding="6,3"
                                        Command="{Binding ShowLikesCommand}"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        ToolTip="View Likes">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="FormatListBulleted" />
                                            <TextBlock
                                                Margin="6,0,0,0"
                                                FontSize="12"
                                                Text="Show" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        MinWidth="80"
                                        Margin="0,0,10,6"
                                        Padding="6,3"
                                        Command="{Binding DeleteLikesCommand}"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        ToolTip="Delete Likes">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="Delete" />
                                            <TextBlock
                                                Margin="6,0,0,0"
                                                FontSize="12"
                                                Text="Delete" />
                                        </StackPanel>
                                    </Button>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <!--  FOLLOWING GROUP  -->
                        <Border
                            Padding="8"
                            BorderBrush="{DynamicResource MahApps.Brushes.Gray9}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,6"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="Following" />
                                <UniformGrid Columns="2" Rows="1">
                                    <Button
                                        MinWidth="80"
                                        Margin="0,0,10,6"
                                        Padding="6,3"
                                        Command="{Binding ShowFollowingCommand}"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        ToolTip="View Following">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="FormatListBulleted" />
                                            <TextBlock
                                                Margin="6,0,0,0"
                                                FontSize="12"
                                                Text="Show" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        MinWidth="80"
                                        Margin="0,0,10,6"
                                        Padding="6,3"
                                        Command="{Binding DeleteFollowingCommand}"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        ToolTip="Delete Following">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="Delete" />
                                            <TextBlock
                                                Margin="6,0,0,0"
                                                FontSize="12"
                                                Text="Delete" />
                                        </StackPanel>
                                    </Button>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>



                <mui:Flyout
                    x:Name="Notification"
                    Width="400"
                    Height="50"
                    Margin="0"
                    Padding="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    AnimateOpacity="True"
                    Background="{DynamicResource MahApps.Brushes.Control.Background}"
                    CloseButtonVisibility="Hidden"
                    Header="{Binding NotificationMessage}"
                    IsModal="False"
                    IsOpen="{Binding IsNotificationOpen}"
                    Opacity="0.9"
                    Position="Top"
                    Theme="Inverse" />

            </Grid>
        </Border>

        <!--  WebView2 fills the rest  -->
        <Grid Grid.Row="1" ClipToBounds="True">
            <wv2:WebView2
                x:Name="webView"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsEnabled="{Binding IsWebViewEnabled}" />
        </Grid>
    </Grid>
</Page>
