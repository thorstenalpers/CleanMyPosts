<Page
    x:Class="CleanMyPosts.UI.Views.XPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mui="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:viewmodels="clr-namespace:CleanMyPosts.UI.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Style="{DynamicResource MahApps.Styles.Page}">

    <Page.Resources>
        <Style TargetType="ScrollBar">
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="8" />
                    <Setter Property="MinHeight" Value="8" />
                    <Setter Property="Margin" Value="0" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Navigation Bar mit Background  -->
        <Border
            Grid.Row="0"
            Margin="4"
            Padding="8"
            Background="{DynamicResource MahApps.Brushes.Control.Background}"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="3">

            <Grid>
                <!--  ScrollViewer with Buttons  -->
                <ScrollViewer
                    Focusable="False"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled">
                    <StackPanel
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <!--  Posts Section  -->
                        <StackPanel
                            MinHeight="38"
                            Margin="0,0,30,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Posts:" />
                            <UniformGrid
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Columns="2"
                                Rows="1">
                                <Button
                                    MinWidth="80"
                                    Margin="0,0,10,0"
                                    Padding="6,3"
                                    Command="{Binding ShowPostsCommand}"
                                    Foreground="{DynamicResource MahApps.Brushes.Text}"
                                    IsEnabled="{Binding AreButtonsEnabled}"
                                    ToolTip="Show Posts">
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            VerticalAlignment="Center"
                                            Kind="Eye" />
                                        <TextBlock
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Text="Show" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    MinWidth="80"
                                    Padding="6,3"
                                    Command="{Binding DeletePostsCommand}"
                                    IsEnabled="{Binding AreButtonsEnabled}"
                                    ToolTip="Delete Posts">
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            VerticalAlignment="Center"
                                            Kind="Delete" />
                                        <TextBlock
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Text="Clear" />
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </StackPanel>

                        <!--  Likes Section  -->
                        <StackPanel
                            MinHeight="38"
                            Margin="0,0,30,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource MahApps.Brushes.Text}"
                                Text="Likes:" />
                            <UniformGrid
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Columns="2"
                                Rows="1">
                                <Button
                                    MinWidth="80"
                                    Margin="0,0,10,0"
                                    Padding="6,3"
                                    Command="{Binding ShowLikesCommand}"
                                    IsEnabled="{Binding AreButtonsEnabled}"
                                    ToolTip="Show Likes">
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            VerticalAlignment="Center"
                                            Kind="Eye" />
                                        <TextBlock
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Text="Show" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    MinWidth="80"
                                    Padding="6,3"
                                    Command="{Binding DeleteLikesCommand}"
                                    Foreground="{DynamicResource MahApps.Brushes.Text}"
                                    IsEnabled="{Binding AreButtonsEnabled}"
                                    ToolTip="Clean Likes">
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            VerticalAlignment="Center"
                                            Kind="Delete" />
                                        <TextBlock
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Text="Clear" />
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </StackPanel>

                        <!--  Following Section  -->
                        <StackPanel
                            MinHeight="38"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Following:" />
                            <UniformGrid
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Columns="2"
                                Rows="1">
                                <Button
                                    MinWidth="80"
                                    Margin="0,0,10,0"
                                    Padding="6,3"
                                    Command="{Binding ShowFollowingCommand}"
                                    IsEnabled="{Binding AreButtonsEnabled}"
                                    ToolTip="Show Following">
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            VerticalAlignment="Center"
                                            Kind="Eye" />
                                        <TextBlock
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Text="Show" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    MinWidth="80"
                                    Padding="6,3"
                                    Command="{Binding DeleteFollowingCommand}"
                                    IsEnabled="{Binding AreButtonsEnabled}"
                                    ToolTip="Clean Following">
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            VerticalAlignment="Center"
                                            Kind="Delete" />
                                        <TextBlock
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Text="Clear" />
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>

                <mui:Flyout
                    x:Name="Notification"
                    Width="400"
                    Height="50"
                    Margin="0"
                    Padding="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    AnimateOpacity="True"
                    Background="{DynamicResource MahApps.Brushes.Control.Background}"
                    CloseButtonVisibility="Hidden"
                    Header="{Binding NotificationMessage}"
                    IsModal="False"
                    IsOpen="{Binding IsNotificationOpen}"
                    Opacity="0.9"
                    Position="Top"
                    Theme="Inverse" />

            </Grid>
        </Border>

        <!--  WebView2 fills the rest  -->
        <Grid Grid.Row="1" ClipToBounds="True">
            <wv2:WebView2
                x:Name="webView"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsEnabled="{Binding IsWebViewEnabled}" />
        </Grid>
    </Grid>
</Page>
